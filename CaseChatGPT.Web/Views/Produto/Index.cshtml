@model List<ProdutoViewModel>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="container mt-4">
    <h2 class="mb-3">Lista de Produtos</h2>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Descricao</td>
                    <td>R$ @produto.Preco.ToString("F2")</td>
                    <td>
                        <a href="@Url.Action("Edit", "Produto", new { id = produto.Id })" class="btn btn-sm btn-warning">Editar</a>
                        <a href="@Url.Action("Detalhes", "Produto", new { id = produto.Id })" class="btn btn-sm btn-info">Detalhes</a>
                        <a href="@Url.Action("Excluir", "Produto", new { id = produto.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este produto?');">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="@Url.Action("Criar", "Produto")" class="btn btn-primary">Adicionar Produto</a>
</div>
