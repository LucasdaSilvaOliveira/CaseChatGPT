@model IEnumerable<CaseChatGPT.Web.Areas.Usuario.Models.UsuarioViewModel>
@{
    ViewData["Title"] = "Tela de Usuário";
}

<div id="div-main-usuario">
    <div id="div-top-usuario">
        <div>
            <h1>Gerenciamento de usuários</h1>
            <p>Adicione, edite e gerencie as permissões dos usuários do sistema.</p>
        </div>

        <a asp-area="Usuario" asp-controller="Usuario" asp-action="Create" class="btn btn-primary">
            <i class="fa-solid fa-plus"></i>
            Adicionar Novo Usuário
        </a>
    </div>

    <div id="div-search-usuario" style="position: relative;">
        <i class="fa fa-search" style="position: absolute; left: 10px; top: 50%; transform: translateY(-50%); color: gray;"></i>
        <input type="text" placeholder="Pesquisar por nome ou e-mail..." style="padding-left: 35px; width: 100%; height: 35px;">
    </div>

    <table class="table table-hover mt-5 table-light">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">UserName</th>
                <th scope="col">Nome Completo</th>
                <th scope="col">E-mail</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var usuario in Model)
            {
                <tr>
                    <th scope="row">@usuario.Id</th>
                    <td>@usuario.UserName</td>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Email</td>
                    <td>
                        <button class="btn btn-sm btn-primary">
                            <i class="fa fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-secondary">
                            <i class="fa-solid fa-circle-info"></i>
                        </button>
                        <button class="btn btn-sm btn-danger">
                            <i class="fa fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

