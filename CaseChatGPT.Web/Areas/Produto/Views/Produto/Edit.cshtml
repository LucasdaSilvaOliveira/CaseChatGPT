@model CaseChatGPT.Web.Areas.Produto.Models.ProdutoViewModel

@{
    ViewBag.Title = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="Edit" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Id" class="form-label">ID</label>
        <input asp-for="Id" class="form-control" readonly />
        <span asp-validation-for="Id" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-area="Produto" asp-controller="Produto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>