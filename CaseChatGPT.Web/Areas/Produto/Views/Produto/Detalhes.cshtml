@model CaseChatGPT.Web.Areas.Produto.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Detalhes";
}


<h2>Detalhes do Produto</h2>

<div>
    <h4>@Model.Nome</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>

        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Model.Nome
        </dd>

        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Model.Descricao
        </dd>

        <dt class="col-sm-2">
            Preço
        </dt>
        <dd class="col-sm-10">
            @Model.Preco.ToString("C") <!-- Formato moeda -->
        </dd>
    </dl>
</div>

<div>
    <a href="/Produto" class="btn btn-secondary">Voltar</a>
</div>