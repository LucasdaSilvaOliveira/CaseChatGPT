@model CaseChatGPT.Web.Areas.Produto.Models.AdicionarProdutoViewModel
@{
    ViewBag.Title = "Adicionar Produto";
}

<h2>Adicionar Produto</h2>

<form asp-action="Adicionar" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descricao" class="form-label">Descrição</label>
        <textarea asp-for="Descricao" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço</label>
        <input asp-for="Preco" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Estoque" class="form-label">Estoque</label>
        <input asp-for="Estoque" class="form-control" type="number"/>
    </div>

    <button type="submit" class="btn btn-primary">Criar</button>
    <a asp-area="Produto" asp-controller="Produto" asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>