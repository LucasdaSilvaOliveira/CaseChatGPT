@model CaseChatGPT.Web.Areas.Login.Models.LoginViewModel
@{
    Layout = "_LayoutLogin";
}

@using (Html.BeginForm("Login", "Login", FormMethod.Post))
{
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4 shadow-lg" style="width: 350px;">
            <div class="card-body">
                <h3 class="text-center mb-4">Login</h3>
                <div class="mb-3">
                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Digite seu usuário" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Digite sua senha" })
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </div>
        </div>
    </div>
}
